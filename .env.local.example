# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend - Email (Required for emailing PDF reports and password reset)
RESEND_API_KEY=re_xxxxxxxxxxxx
# In production (e.g. Vercel): use an address on your verified Resend domain, e.g.:
# RESEND_FROM_EMAIL=Pre Delivery <noreply@predelivery.ai>
# Local/dev: onboarding@resend.dev only sends to your Resend account email
RESEND_FROM_EMAIL=onboarding@resend.dev

# JWT secret for auth cookies (change in production)
JWT_SECRET=your-secret-key-change-in-production

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Supabase Storage bucket name (default: inspections)
# SUPABASE_STORAGE_BUCKET=inspections
